{
	"scripts": {
		"dev": "bun run --hot src/index.ts server",
		"start": "bun run src/index.ts server",
		"lint": "eslint ./src/** ",
		"lint:fix": "eslint ./src/** --fix",
		"check": "tsc --project tsconfig.json --noEmit",
		"build": "bun build --sourcemap --target bun ./src/index.ts --outfile ./dist/index.js",
		"build:bin": "bun build --compile --target bun ./src/index.ts --outfile ./dist/nikontrol"
	},
	"version": "1.0.0",
	"main": "./dist/index.js",
	"author": "Nicolas Boyer",
	"bin": {
		"nikontrol": "./dist/index.js"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@types/midi": "^2.0.3",
		"@types/node": "^22.10.2",
		"@types/node-osc": "^6.0.3",
		"bun": "^1.1.42",
		"commander": "^12.1.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.14.0",
		"osc": "^2.4.5",
		"osc-js": "^2.4.1",
		"tsx": "^4.19.2",
		"typescript-eslint": "^8.18.2"
	}
}
